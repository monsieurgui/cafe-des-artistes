# Caf√© des Artistes Bot Environment Configuration
# Copy this file to .env and fill in your values

# Bot Environment (development/production)
BOT_ENV=development

# Discord Bot Token (REQUIRED)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Bot Configuration
BOT_PREFIX=!

# Bot Owner ID (OPTIONAL)
# If not specified, the bot will use the guild owner for each server
# Set this only if you want to override the default behavior
# OWNER_ID=your_discord_user_id_here

# Logging Configuration
LOG_LEVEL=INFO
DEBUG=false

# Bot Behavior Settings
MAX_QUEUE_SIZE=1000
TIMEOUT_DURATION=1800

# FFmpeg Path (optional - will auto-detect if not specified)
# FFMPEG_PATH=/path/to/ffmpeg

# Database Configuration (optional - uses defaults if not specified)
# DATABASE_PATH=data/guild_settings.db

# IPC Configuration (optional - uses defaults if not specified)
# IPC_COMMAND_PORT=5555
# IPC_EVENT_PORT=5556
# IPC_HOST=127.0.0.1